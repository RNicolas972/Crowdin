{% extends 'base.html.twig' %}

{% block title %}Project{% endblock %}

{% block body %}
    <div class="form-inline">
        <h1>Project</h1>
        <div class="ml-auto">{{ include('project/_delete_form.html.twig') }}</div>
    </div>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ project.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ project.name }}</td>
            </tr>
            <tr>
                <th>Owner</th>
                <td>{{ project.user.username }}, {{ project.user.email }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ project.description }}</td>
            </tr>
            <tr>
                <th>Languages</th>
                <td>
                    {% for language in project.languages %}
                        {{ language.name }}
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-sm btn-warning">edit</a>
        
    <div class="text-right">
        <a href="{{ path('project_index') }}" class="btn mt-5">back to list</a>
    </div>
{% endblock %}

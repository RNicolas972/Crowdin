{% extends 'base.html.twig' %}

{% block title %}Language{% endblock %}

{% block body %}
    <div class="form-inline"> 
        <h1>Language</h1>
        <div class="ml-auto">{{ include('language/_delete_form.html.twig') }}</div>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ language.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ language.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('language_edit', {'id': language.id}) }}" class="btn btn-sm btn-warning">edit</a>

    <div class="text-right">
        <a href="{{ path('language_index') }}" class="btn btn-sm mt-5">back to list</a>
    </div>
{% endblock %}

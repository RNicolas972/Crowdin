{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="form-inline">
        <h1>User</h1>
        <div class="ml-auto">{{ include('user/_delete_form.html.twig') }}</div>
    </div>
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Languages</th>
                <td>
                    {% for language in user.languages %}
                        {{ language.name }}
                    {% endfor %}
                </td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-sm btn-warning mx-2">edit</a>

    <div class="text-right mt-5">
        <a href="{{ path('user_index') }}" class="btn btn-sm ml-auto">back to list</a>
    </div>
{% endblock %}

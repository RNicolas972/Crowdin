{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <h1>Project index</h1>

    <table class="table table-sm table-hover mt-5">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Owner</th>
                <th class="text-right pr-5">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.name }}</td>
                <td>{{ project.user.email }}</td>
                <td class="text-right">
                    <a href="{{ path('project_show', {'id': project.id}) }}" class="btn btn-sm btn-outline-info">show</a>
                    <a href="{{ path('project_edit', {'id': project.id}) }}" class="btn btn-sm btn-outline-warning">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('project_new') }}" class="btn btn-success mt-5">+ Create new</a>
{% endblock %}
